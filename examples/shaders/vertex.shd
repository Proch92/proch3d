#version 130

in vec3 inPosition;
in vec3 inNormal;

out vec3 Normal;
out vec3 toPointLight;

uniform mat4 view;
uniform mat4 proj;
uniform mat4 model;
uniform mat4 rot;

uniform vec4 pointLightPos;

void main() {
	gl_Position = proj * view * model * vec4(inPosition, 1.0);

	Normal = inNormal;
	toPointLight = normalize(vec3(pointLightPos.x, pointLightPos.y, pointLightPos.z) - inPosition);
}