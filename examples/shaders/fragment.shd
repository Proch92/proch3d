#version 130

in vec3 Normal;

out vec4 outColor;

uniform vec4 ambientLight;

uniform vec4 dirLightColor;
uniform vec3 dirLightDirection;

void main() {
	vec4 dirLight = dirLightColor * clamp(dot(dirLightDirection, Normal), 0.0, 1.0);
	vec4 lightIntensity = clamp(ambientLight + dirLight, 0.0, 1.0);
	outColor = vec4(0.7, 0.7, 0.7, 1.0) * lightIntensity;
}